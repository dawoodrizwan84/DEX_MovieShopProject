@model IEnumerable<DEX_MovieShopProject.Models.Movie>

<div class="container" style="margin-top:50px">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

    @foreach(var item in Model)
    {
            <div class="col">
                <div class="card border-light mb-3" style="max-width: 25rem;">
                    <div class="card-body">
                        <a asp-controller="Movie" asp-action="Details" asp-route-id="@item.Id">
                            <img src="@item.ImgUrl" class="bd-placeholder-img card-img-top" height="400" alt="...">
                            <h4 class="card-title">@item.Title</h4>
                            <p class="card-text">Director:@item.Director</p>
                            <p class="card-text">Release Year:@item.ReleaseYear</p>
                            <h4 class="card-title">SEK @item.Price <small class="text-body-secondary fw-light">kr</small></h4>
                        </a>
                    </div>
                    <div class="btn-group" style="margin-bottom:20px">
                        <button type="button" class="btn btn-secondary m-2" onclick="Add(@item.Id)">Add to Cart</button>
                        <a asp-controller="Movie" asp-action="Details" asp-route-id="@item.Id" class="btn btn-light m-2">View Details</a>
                    </div>
                </div>
            </div>
    }
    </div>
</div>


