@model DEX_MovieShopProject.Models.ViewModels.ConfirmVM


<div style="margin-top:50px">

<h1>Summary of your data and shopping Cart</h1>
<br />

<div class="card rounded-3 mb-4" style="background-color:#30115e">
<div class="row m-3">
    <div class="col-md-6">
        <h3 class="p-2">Hello,@Model.Customer.FirstName @Model.Customer.LastName</h3><br />
        <h5 class="p-2">Delivery Street: @Model.Customer.DeliveryAddress</h5>
        <h5 class="p-2">Delivery Zip: @Model.Customer.DeliveryZip</h5>
        <h5 class="p-2">Delivery City: @Model.Customer.DeliveryCity</h5>
        <h5 class="p-2">Email City: @Model.Customer.EmailAddress</h5>
        <h5 class="p-2">Phone: @Model.Customer.PhoneNo</h5>
    </div>
    <div class="col-md-6">
        <h3 class="m-3">Your Order</h3><br />
        @foreach(var item in Model.Cart.CartMovies)
        {
            <div class="m-2">
                <span class="p-2">@item.Movie.Title</span>
                <span class="p-2">@item.Movie.Price</span>
                <span class="p-2">@item.NoOfCopies</span>
                <span class="p-2">@item.SubTotal</span>

            </div>
        }

        <br />
                <br />
                <br />
                <br />
                <p>Total order cost:</p>
                <h3 style="margin-left:20px">@Model.Cart.Total kr</h3>
    </div>

</div>
</div>

<div class="m-md-5">
    <a asp-action="CreateOrder" asp-controller="Order" class="btn btn-secondary btn-block btn-lg">Place Order</a>
    <a asp-action="Index" asp-controller="Home" class="btn btn-light btn-block btn-lg">Continue Shopping</a>
</div>

</div>