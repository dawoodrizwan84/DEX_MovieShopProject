@model IEnumerable<DEX_MovieShopProject.Models.Movie>

@{
    ViewData["Title"] = "Index";
}
<br />

<h1>Movies List</h1>

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Movie/Create">Add more</a>

        </div>
    </div>
</div>





<table class="table table-bordered table-active">
    <thead>
        <tr>

            @* <th style="color:#FAA7A2">
            @Html.DisplayNameFor(model => model.Id)
            </th> *@
            <th style="color:#FAA7A2">
                @Html.DisplayNameFor(model => model.Title)

            </th>
            <th style="color:#FAA7A2">
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th style="color:#FAA7A2">
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th style="color:#FAA7A2">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            @* <th>
            @Html.DisplayNameFor(model => model.Description)
            </th> *@
            <th style="color:#FAA7A2">
                @Html.DisplayNameFor(model => model.ImgUrl)

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*  <td>
            @Html.DisplayFor(modelItem => item.Id)
            </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.Title)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Director)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                @* <td>
            @Html.DisplayFor(modelItem => item.Description)
            </td> *@
                <td>
                    @* @Html.DisplayFor(modelItem => item.ImgUrl) *@


                </td>
                <td>

                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" style="color:red" onclick="return window.confirm('Are You Sure?')" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>