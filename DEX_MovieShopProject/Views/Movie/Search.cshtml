@model IEnumerable<DEX_MovieShopProject.Models.Movie>

@{
    ViewData["Title"] = "Search Page";
    var empty = ViewBag.Empty;
}



<div style="margin-top:100px">
    <div style="font-family:Arial">

        <form class="d-flex" asp-controller="Movie" asp-action="Search">
            <input class="form-control me-sm-2" type="search" value="@empty" name="searchTitle">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </form>
        <hr />
        <div>
            @foreach (var item in Model)
            {

                <h1 class="p-2 m-2">@item.Title</h1>

                <img src="~/@item.ImgUrl" class="img-fluid" alt="@item.Title" />

                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => item.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => item.Director)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => item.Director)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => item.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => item.Description)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => item.ReleaseYear)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => item.ReleaseYear)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => item.Price)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => item.Price)
                    </dd>

                </dl>

                <div class="d-flex">
                    <div class="btn-group" style="margin-bottom:20px">
                        <button type="button" class="btn btn-secondary m-2" onclick="Add(@item.Id)">Add to Cart</button>
                    </div>
                </div>
            }



        </div>

    </div>
</div>